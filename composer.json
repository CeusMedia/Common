  "minimum-stability": "dev",
  "require": {
    "php": ">=7.3"
  },
  "require-dev": {
    "ceus-media/doc-creator": "* | dev-master",
    "michelf/php-markdown": "^1.7",
    "erusev/parsedown": "~1.0",
    "phpunit/phpunit": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-strict-rules": "*",
    "rector/rector": "*"
  },
  "autoload": {
    "psr-4": {
      "CeusMedia\\Common\\": "src/",
      "CeusMedia\\Common\\Test\\": "test/"
    },
    "files": ["src/compat8.php", "src/global.php"]
  },
  "scripts": {
    "install-dev": "composer install --dev --quiet",
    "update-dev": "composer install --dev",
    "dev-rector-rules-show": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-rules.php --dry-run"
    ],
    "dev-test-syntax": "php test/syntax.php"
  },
  "scripts-descriptions": {
    "install-dev": "Installs the project dependencies for Development stage",
    "dev-test-syntax": "Validate code base syntax using PHP linter",
    "dev-rector-rules-show": "Shows suggestions of selected Rector rules"
  }
}
