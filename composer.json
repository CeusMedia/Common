      "name": "Christian WÃ¼rker",
      "email": "christian.wuerker@ceusmedia.de",
      "homepage": "https://ceusmedia.de/",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "office@ceusmedia.de",
    "jabber": "cwuerker@ceusmedia.de"
  },
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.4",
    "ext-memcache": "*",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "ext-dom": "*",
    "ext-bz2": "*",
    "ext-zlib": "*",
    "ext-imagick": "*",
    "ext-xsl": "*",
    "ext-simplexml": "*",
    "ext-curl": "*",
    "ext-xml": "*",
    "ext-iconv": "*",
    "ext-zip": "*",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "ext-sockets": "*"
  },
  "require-dev": {
    "ceus-media/doc-creator": "^0.9.6 | dev-master",
    "michelf/php-markdown": "^1.7",
    "erusev/parsedown": "~1.0",
    "phpunit/phpunit": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-strict-rules": "*",
    "rector/rector": "*"
  },
  "autoload": {
    "psr-4": {
      "CeusMedia\\Common\\": "src/",
      "CeusMedia\\CommonTest\\": "test/"
    },
    "files": ["src/global.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "CeusMedia\\Common\\": "src",
      "CeusMedia\\Common\\Test\\": "test"
    }
  },
  "scripts": {
    "install-dev": "composer install --dev --quiet",
    "update-dev": "composer install --dev",
    "dev-create-docs": [
        "@install-dev",
        "php vendor/ceus-media/doc-creator/doc-creator.php --config-file=tool/config/doc-creator.xml"
    ],
    "dev-phpstan": [
      "@install-dev",
      "vendor/bin/phpstan  --config=tool/config/rector-php73.php --dry-run"
    ],
    "dev-rector-7.3-check": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-php73.php --dry-run"
    ],
    "dev-rector-7.3-fix": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-php73.php"
    ],
    "dev-rector-7.4-check": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-php74.php --dry-run"
    ],
    "dev-rector-7.4-fix": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-php74.php"
    ],
    "dev-rector-rules-check": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-rules.php --dry-run"
    ],
    "dev-rector-rules-fix": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-rules.php"
    ],
    "dev-stan": [
      "@install-dev",
      "vendor/bin/phpstan analyze --configuration=tool/config/phpstan.neon --memory-limit=4G --verbose"
    ],
    "dev-test-syntax": "php test/syntax.php"
  },
  "scripts-descriptions": {
    "install-dev": "Installs the project dependencies for Development stage",
    "dev-test-syntax": "Validate code base syntax using PHP linter",
    "dev-rector-rules-show": "Shows suggestions of selected Rector rules"
  }
}
