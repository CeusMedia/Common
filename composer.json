      "email": "christian.wuerker@ceusmedia.de",
      "homepage": "https://ceusmedia.de/",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "office@ceusmedia.de",
    "jabber": "cwuerker@ceusmedia.de"
  },
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.4",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "ext-bz2": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-ftp": "*",
    "ext-gd": "*",
    "ext-iconv": "*",
    "ext-imagick": "*",
    "ext-json": "*",
    "ext-memcache": "*",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "ext-simplexml": "*",
    "ext-sockets": "*",
    "ext-svn": "*",
    "ext-xml": "*",
    "ext-xsl": "*",
    "ext-zip": "*",
    "ext-zlib": "*",
    "ceus-media/doc-creator": "^0.9.6 | dev-master",
    "michelf/php-markdown": "^1.7",
    "erusev/parsedown": "~1.0",
    "phpunit/phpunit": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-strict-rules": "*",
    "rector/rector": "*"
  },
  "autoload": {
    "psr-4": {
      "CeusMedia\\Common\\": "src/",
      "CeusMedia\\CommonTest\\": "test/"
    },
    "files": ["src/global.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "CeusMedia\\Common\\": "src",
      "CeusMedia\\CommonTest\\": "test"
    }
  },
  "scripts": {
    "install-dev": "composer install --dev --quiet",
    "update-dev": "composer install --dev",
    "dev-create-docs": [
        "@install-dev",
        "php vendor/ceus-media/doc-creator/doc-creator.php --config-file=tool/config/doc-creator.xml"
    ],
    "dev-phpunit": [
      "@install-dev",
      "php vendor/bin/phpunit --configuration tool/config/phpunit9.xml --testsuite units"
    ],
    "dev-phpstan": [
      "@install-dev",
      "vendor/bin/phpstan analyze --configuration=tool/config/phpstan.neon --memory-limit=4G --verbose"
    ],
    "dev-phpstan-clear": [
      "@install-dev",
      "vendor/bin/phpstan clear-cache --verbose"
    ],
    "dev-phpstan-save": [
      "@install-dev",
      "vendor/bin/phpstan analyse --configuration tool/config/phpstan.neon --generate-baseline tool/config/phpstan-baseline.neon --verbose"
    ],
    "dev-rector": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-rules.php --dry-run"
    ],
    "dev-rector-fix": [
      "@install-dev",
      "vendor/bin/rector process --config=tool/config/rector-rules.php"
    ],
    "dev-test-syntax": "php test/syntax.php"
  },
  "scripts-descriptions": {
    "install-dev": "Installs project dependencies for Development stage",
    "update-dev": "Updates project dependencies for Development stage",
    "dev-phpstan": "Validate codebase with PHPStan",
    "dev-phpstan-clear": "Clear PHPStan cache",
    "dev-phpstan-save": "Store current results in ignore list",
    "dev-rector": "Shows suggestions of configured Rector rules",
    "dev-rector-fix": "Apply currently configured Rector rules to codebase",
    "dev-test-syntax": "Validate code base syntax using PHP linter"
  }
}
